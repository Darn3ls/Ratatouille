@using Ratatouille.Models
@inject NavigationManager Navigation

@code {
    [Parameter]
    public Recipe Recipe { get; set; } = default!;

    void NavigateToDetails()
    {
        Navigation.NavigateTo($"recipes/details?id={Recipe.Id}");
    }
}

<style>
.recipe-card {
    border-radius: 18px;
    box-shadow: 0 2px 16px rgba(0,0,0,0.08);
    background: #fff;
    transition: box-shadow 0.2s;
    border: none;
    overflow: hidden;
    cursor: pointer;
}
.recipe-card:hover {
    box-shadow: 0 4px 24px rgba(0,0,0,0.15);
}
.recipe-card-img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-bottom: 1px solid #f0f0f0;
}
.recipe-card-body {
    padding: 1.2rem;
}
.recipe-card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #222;
}
.recipe-card-text {
    font-size: 1rem;
    color: #555;
    margin-bottom: 1.2rem;
}
</style>

<div class="col">
    <div class="recipe-card h-100" @onclick="NavigateToDetails">
        <img src="@Recipe.ImageURL" class="recipe-card-img" alt="@Recipe.Title" />
        <div class="recipe-card-body">
            <div class="recipe-card-title">@Recipe.Title</div>
            <div class="recipe-card-text">@Recipe.Description</div>
        </div>
    </div>
</div>
